<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AntibioticsPage" parent ="AppTheme">
        <!-- <item name="textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textSize">12sp</item> -->
    </style>

    <style name="AntibioticsPage.TextViews.Title" parent ="AntibioticsPage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <!--<item name="android:textAlignment">center</item>-->
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="AntibioticsPage.TextViews.Header" parent ="AntibioticsPage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <!--<item name="android:textAlignment">center</item>-->
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="AntibioticsPage.TextViews.Text" parent ="AntibioticsPage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <!--<item name="android:textAlignment">center</item>-->
        <item name="android:layout_centerHorizontal">true</item>
    </style>




</resources>