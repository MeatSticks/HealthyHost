<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name = "MedicalClinicsPage" page ="AppTheme" >
        <item name= "android:textColor">@color/colorPrimaryDark</item>
        <item name= "android:textSize">12sp</item>
    </style>

    <style name= "MedicalClinicsPage.TextViews.NameTitle" parent= "MedicalClinicsPage">
        <item name= "android:layout_width">match_parent</item>
        <item name= "android:layout_height">match_parent</item>
        <item name= "android:textStyle">bold</item>
        <item name= "android:textSize">25sp</item>
        <item name= "android:textColor">#000000</item>
        <item name= "android:paddingLeft">10sp</item>
        <item name= "android:paddingRight">10sp</item>
        <item name= "android:paddingTop">5sp</item>

    </style>

    <style name= "MedicalClinicsPage.TextViews.Address" parent= "MedicalClinicsPage">
        <item name= "android:layout_width">match_parent</item>
        <item name= "android:layout_height">match_parent</item>
        <item name= "android:textStyle">bold</item>
        <item name= "android:textSize">15sp</item>
        <item name= "android:textColor">#000000</item>
        <item name= "android:autoLink">map</item>
        <item name= "android:paddingLeft">40sp</item>
        <item name= "android:paddingRight">10sp</item>

    </style>

    <style name= "MedicalClinicsPage.TextViews.Phone" parent= "MedicalClinicsPage">
    <item name= "android:layout_width">match_parent</item>
    <item name= "android:layout_height">match_parent</item>
    <item name= "android:textStyle">bold</item>
    <item name= "android:textSize">15sp</item>
    <item name= "android:textColor">#000000</item>
        <item name= "android:autoLink">phone</item>
    <item name= "android:paddingLeft">40sp</item>
    <item name= "android:paddingRight">10sp</item>
    </style>

    <style name= "MedicalClinicsPage.TextViews.HoursTitle" parent= "MedicalClinicsPage">
        <item name= "android:layout_width">match_parent</item>
        <item name= "android:layout_height">match_parent</item>
        <item name= "android:textStyle">bold</item>
        <item name= "android:textSize">20sp</item>
        <item name= "android:textColor">#000000</item>
        <item name= "android:paddingLeft">40sp</item>
        <item name= "android:paddingRight">10sp</item>
    </style>

    <style name= "MedicalClinicsPage.TextViews.HoursList" parent= "MedicalClinicsPage">
        <item name= "android:layout_width">match_parent</item>
        <item name= "android:layout_height">match_parent</item>
        <item name= "android:textStyle">bold</item>
        <item name= "android:textSize">15sp</item>
        <item name= "android:textColor">#000000</item>
        <item name= "android:paddingLeft">60sp</item>
        <item name= "android:paddingRight">10sp</item>
    </style>

    <style name="HealthyBtn">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:alpha">0.80</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LanguageBtn" parent="HealthyBtn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name = "IllnessesPage">
        <item name= "android:textColor">#000000</item>
        <item name= "android:textSize">12sp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="IllnessesPage.Title" parent="IllnessesPage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
    </style>

  <style name="IllnessesPage.SubTitles" parent="IllnessesPage">
      <item name="android:layout_height">match_parent</item>
      <item name="android:layout_width">match_parent</item>
      <item name="android:titleTextAppearance"></item>
      <item name="android:textStyle">bold</item>
      <item name="android:textSize">22dp</item>
  </style>

    <style name="IllnessesPage.Body" parent="IllnessesPage">
        <item name="android:layout_width" >match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAppearance"></item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18dp</item>
    </style>


</resources>
