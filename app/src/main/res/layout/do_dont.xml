<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:alpha="0.80"
        android:background="#FFFFFF"
        android:color="#66FF0000"
        android:paddingTop="30dp"
        android:text="This page is meant for you to learn how to take care of your medicines. Select one of the two following options to learn more about drug care."
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/dos"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.20"
        android:alpha="0.80"
        android:background="#FF9898"
        android:text="Improper Usage"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Proper Usage"
        android:layout_weight="0.20"
        android:id="@+id/dont"
        android:background="#7FBF7F"
        android:textColor="@android:color/black"
        android:alpha="0.80"
        android:textStyle="bold"
        android:textSize="40sp"/>
</LinearLayout>