                android:layout_height="match_parent"
                android:text="Ceftriaxone"
                android:textAlignment="center"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                /> <!--This is where the name of the page goes-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Description"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                /><!--Description Title Header-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Yaam tshuaj siv lug d tiv thaiv kom kaab mob bacteria tsi xob luj taus, nwg siv lug khu tug kab mob kis lug ntawm kev sib deev, gonorrhea, mob raws daim npluag hlwb tau hau (meningitis), mob pob ntseg, mob ntsws hab mob ntawm dlaim tawv nqaj."
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                /><!--Description of the page in question-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Uses"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                /><!--Symptoms-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Thoj plaab, mob taub hau, kiv taub hau hab tawm fws heev."
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                /><!--Symptoms of the page in question-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Additional Information"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                /><!--Additional Information-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="https://www.nlm.nih.gov/medlineplus/druginfo/meds/a685032.html"
                android:autoLink="web"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                /> <!--INSERT LINK IN THE "android:text="" FIELD-->
            <include android:layout_width="fill_parent" android:layout_height="wrap_content" layout="@layout/healthyhostlogo" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
