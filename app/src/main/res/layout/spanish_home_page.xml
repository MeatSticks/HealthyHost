<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

        <TextView
            android:paddingTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Bienvenidos a Healthy Host"
            android:textSize="30sp"
            android:background="#ffffff"
            android:textAlignment="center"
            android:textColor="#000000"
            android:id="@+id/textView1"
            android:color="#66FF0000"
            android:alpha="0.80"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>
        <Button
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Antibioticos"
            android:layout_weight="0.20"
            android:id="@+id/antibioticos"
            android:color="#66FF0000"
            android:alpha="0.80"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Enfermedades"
            android:layout_weight="0.20"
            android:id="@+id/enfermedades"
            android:color="#66FF0000"
            android:alpha="0.80"
            android:textStyle="bold"
            android:textSize="20sp"/>


        <Button
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Preguntas Comun para Hacer a su Doctor"
            android:layout_weight="0.20"
            android:id="@+id/spanishfaq"
            android:color="#66FF0000"
            android:alpha="0.80"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Clinicas Medicas"
            android:layout_weight="0.20"
            android:id="@+id/spanlocal_clinics"
            android:color="#66FF0000"
            android:alpha="0.80"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Adjustes"
            android:layout_weight="0.20"
            android:id="@+id/adjustes"
            android:color="#66FF0000"
            android:alpha="0.80"
            android:textStyle="bold"
            android:textSize="20sp"/>



    </TableLayout>
</ScrollView>