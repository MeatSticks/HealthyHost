<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        //the scroll view allows the the amount of text to be seen even when it goes off the screen

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/FAQ1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="1. What is the difference between bacterial infection treatment and viral infection treatment?"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp" />
            // the extra space after the text is to create a space within the text for clarity

            <TextView
                android:id="@+id/Space1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/FAQ1"
                android:text=" "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/FAQ2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Space1"
                android:text="2. How do symptoms of bacterial infections differ from those of viral infections?"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Space2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/FAQ2"
                android:text=" "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/FAQ3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Space2"
                android:text="3. Why do I need to take antibiotics?"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Space3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/FAQ3"
                android:text=" "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/FAQ4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Space3"
                android:text="4. Do I really need to take antibiotics? Are there any other safer treatment plans?         "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Space4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/FAQ4"
                android:text=" "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/FAQ5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Space4"
                android:text="5. How will the antibiotics affect naturally occurring bacteria in the body?"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Space5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/FAQ5"
                android:text=" "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/FAQ6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Space5"
                android:text="6. Does the antibiotics interfere with the effectiveness of other medications such as birth control pills?"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Space6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/FAQ6"
                android:text=" "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/FAQ7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Space6"
                android:text="7. What is antibiotic resistance? Would taking this medication decreases its effectiveness against treating bacterial infections in the future? How can this be prevented?"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Space7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/FAQ7"
                android:text=" "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/FAQ8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Space7"
                android:text="8. Are there any possible adverse reactions if the antibiotic is taken with other medications, food, or alcohol?"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Space8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/FAQ8"
                android:text=" "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/FAQ9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Space8"
                android:text="9. What is the proper dosage when taking the antibiotic? How long should the treatment be continued?"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Space9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/FAQ9"
                android:text=" "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/FAQ10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Space9"
                android:text="10. Are there any harmful side effects when taking this antibiotic?"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
